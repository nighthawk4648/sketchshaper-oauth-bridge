{
  "version": 2,
  "rewrites": [
    {
      "source": "/callback",
      "destination": "/api/callback"
    },
    {
      "source": "/auth-status",
      "destination": "/api/auth-status"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, User-Agent"
        }
      ]
    }
  ]
}

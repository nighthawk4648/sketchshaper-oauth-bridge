{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/auth",
      "dest": "/api/auth"
    },
    {
      "src": "/callback",
      "dest": "/api/callback"
    },
    {
      "src": "/auth-status",
      "dest": "/api/auth-status"
    },
    {
      "src": "/refresh",
      "dest": "/api/refresh"
    },
    {
      "src": "/health",
      "dest": "/api/health"
    }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "PATREON_CLIENT_ID": "@patreon_client_id",
    "PATREON_CLIENT_SECRET": "@patreon_client_secret",
    "PATREON_REDIRECT_URI": "@patreon_redirect_uri",
    "BASE_URL": "@base_url"
  }
}